<%= provide(:title, "お問い合わせ") %>
<div class="create-form">
  <div class="form">
    <div class="create-title">
      お問い合わせフォーム
    </div>
    <%= form_with(model: @contact, local: true) do |f| %>

      <%= render 'shared/error_form', object: f.object %>

      <p class="form-required"><span>※</span>は必須項目です</p>

      <div class="form-template">
        <%= f.label :お名前, class:"form-label" %><p>※</p>
        <% if @contact.errors.include?(:name) %>
          <div class="form-alert"><%= @contact.errors.full_messages_for(:name).first %></div>
        <% end %>
        <%= f.text_field :name, autofocus: true, class:"form-control", placeholder: "例：穂高　太郎"  %>
      </div>

      <div class="form-template">
        <%= f.label :メールアドレス, class:"form-label" %><p>※</p>
        <% if @contact.errors.include?(:email) %>
          <div class="form-alert"><%= @contact.errors.full_messages_for(:email).first %></div>
        <% end %>
        <%= f.text_field :email, class:"form-control", placeholder: "例：hotaka@kyodo.com"%>
      </div>

      <div class="form-template">
        <%= f.label :お問い合わせ種類 %><p>※</p>
        <% if @contact.errors.include?(:category) %>
          <div class="form-alert"><%= @contact.errors.full_messages_for(:category).first %></div>
        <% end %>
        <%= f.select :category, ["魚について", "商品について", "会社について", "当サイトについて", "その他"], { include_blank: "選択してください" } %>
      </div>

      <div class="form-template">
        <%= f.label :お問合せ内容, class:"form-label" %><p>※</p>
        <% if @contact.errors.include?(:message) %>
          <div class="form-alert"><%= @contact.errors.full_messages_for(:message).first %></div>
        <% end %>
        <%= f.text_area :message, class:"form-control" %>
      </div>

      <div class="create_btn">
        <%= f.submit "送信", class:"btn btn-primary mb-3", type: 'button', onclick: 'submit();' %>
      </div>

    <% end %>
  </div>
</div>

<div class="">
  <div class="call">
    <h3><i class="fas fa-phone-alt"></i>電話又はFAXで<span>お問い合わせ</span></h3>
    <a href="tel:0263-82-3427">0263-82-3427</a>
    <div>受付時間</div>
    <p>営業日 am10:00〜pm:5:00</p>

  </div>
</div>