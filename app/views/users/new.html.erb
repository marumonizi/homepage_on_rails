<div class="create_user">
  アカウント登録
</div>

<div class="create_form">
  <div class="form">
    <%= form_with(model: @user, local: true) do |f| %>

      <%= render 'shared/error_form', object: f.object %>

      <div class="name-form">
        <%= f.label :アカウント名, class:"form-label" %>
        <%= f.text_field :name, class:"form-control", placeholder: "例：穂高　太郎" %>
      </div>

      <div class="password-form">
        <%= f.label :パスワード, class:"form-label" %>
        <%= f.password_field :password, class:"form-control", placeholder: "6文字以上" %>
      </div>
    
      <div class="password-form">
        <%= f.label :パスワード（確認用）, class:"form-label" %>
        <%= f.password_field :password_confirmation, class:"form-control" %>
      </div>

      <div class="create_btn">
        <%= f.submit "アカウント作成", class:"btn btn-primary mb-3" %>
      </div>
    <% end %>
  </div>
</div>
